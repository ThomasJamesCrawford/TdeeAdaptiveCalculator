<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDEE.Views.DeleteAll">
    <ContentPage.Content>
        <StackLayout Padding="5">
            <Frame OutlineColor="LightGray">
                <Button TextColor="White" BackgroundColor="DodgerBlue" Text="CLEAR ALL DATA" VerticalOptions="Center" Command="{Binding DeleteAll}"/>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>